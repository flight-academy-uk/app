---
import { Image } from "astro:assets";
import Logo from "../images/logo.svg";
import Basic from "../layouts/Basic.astro";
---

<Basic
  title="Flight-Academy Uk"
  description="Providing Exceptional Flight School Management Solutions"
>
  <main
    class="bg-white dark:bg-gray-900 h-svh min-h-96 flex justify-center items-center dark:text-white"
  >
    <div class="flex flex-col justify-evenly h-full items-center z-10 relative">
      <Image src={Logo} alt="Flight Academy Uk Logo" />
      <h1 class="text-3xl font-noto">Resource Not Found<h1></h1></h1>
    </div>
    <div
      class="bg-gradient-to-b from-sky-300 dark:from-bg-violet-900 to-transparent dark:bg-indigo-900 w-full h-full absolute top-0 left-0 z-0"
    >
    </div>
  </main></Basic
>
